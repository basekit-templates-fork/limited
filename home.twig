{% extends "layout.twig" %}
{% block content %}

<div class="bk-home">

	<header class="bk-header">
		<div class="wrapper">
			<div class="brand">
				{{widget('logo', 'header-logo', {"defaultlogo": asset('images/logo.png')})|raw}}
				{{widget('companyname', 'homepage-companyname', {"business": "profile"})|raw}}
			</div>
			<div class="header-phone">
				 {{widget('clicktocall', 'headerclicktocall', {phoneText: '212 6574 6736'})|raw}}
			</div>
			{{widget('extendednavigation', 'header-navigation', {"align":"left"})|raw}}
		</div>
	</header>

	<!-- Feature -->
		<div class="feature-img" id="feature-img">
			{{widget('feature', 'featurehome', {"header": "profile", "strapline":"profile", "buttonText":"Lorem Ipsum","defaultBgImg": asset('images/feature-bg.jpg'), 'positionTopPercentage': '50','showBtn': true, 'align':'justifycenter'})|raw}}
		</div>
	<!-- End Feature -->


	<!-- Page Content -->
	<div class="container">
		<section class="wrapper">
			<!-- Main Widget Zone -->
			<section class="main-zone">
				{{zone('main')|raw}}
			</section>
		</section>
	</div>
	<!-- End Page Content -->


	<div class="bk-footer">
		<div class="footer-one">
			<div class="footer-container-one">
				<div class="one-left">
					{{widget('content', 'footercontentleft', {content: '<p>Lorem Ipsum Dolor.</p>', lines: 'all'})|raw}}
				</div>
				<div class="one-right">
					{{widget('content', 'footercontentright', {content: '<p>Lorem Ipsum Dolor.</p>', lines: 'all'})|raw}}
				</div>
			</div>
		</div>
		<div class="footer-two">
			<div class="footer-container-two">
				<div class="two-left">
					{{widget('profile', 'copyright', { 'profileType':'copyright'})|raw}}
				</div>
				<div class="two-right">
					{{widget('profile', 'socialicons', { 'profileType':'socialicons', 'socialicons':'profile'})|raw}}
				</div>
			</div>
		</div>
	</div>

</div><!-- end bk-default-home -->

{% endblock %}